@model metrobackflow.Models.ContactUsModel
@{
    ViewBag.Title = "Contact Steve";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section IncludeHead
    {
    <script src='https://www.google.com/recaptcha/api.js'></script>
}
<div class="row">
    <div class="col-md-6">
        <br />
        <h3>Contact Steve</h3>
        <br />
        <p></p><b>For general questions, please fill out this form:</b></p>
        <b style="color: #FF0000">@ViewBag.SentMessage</b>
        <br />
        @using (Html.BeginForm("SendEmail", "ContactUs"))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.Name, new { style = "width:350px" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Phone, new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.Phone, new { style = "width:350px" })
                        @Html.ValidationMessageFor(model => model.Phone)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.Email, new { style = "width:350px" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Subject, new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.Subject, new { style = "width:350px" })
                        @Html.ValidationMessageFor(model => model.Subject)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Message, new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.TextAreaFor(model => model.Message, new { rows = "6", cols = "50" })
                        @Html.ValidationMessageFor(model => model.Message)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Send Email" class="btn btn-primary" />
                    </div>
                </div>
            </div>
            <div class="g-recaptcha" data-sitekey="6LdIrGYUAAAAAKO7jrbUsgCBEz8IgBteC9PSNjr1"></div>
        }
    </div>
    <div class="col-sm-4">
        <br />
        <br />
        <img src="../images/logo.png" class="img-responsive" />
    </div>
</div>